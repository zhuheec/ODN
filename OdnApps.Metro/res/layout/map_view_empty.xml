<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal" android:gravity="center"
              android:layout_width="fill_parent" android:layout_height="fill_parent"
              android:background="#000000">

    <LinearLayout android:orientation="vertical"
                  android:gravity="center" android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
        <ImageView android:id="@+id/logoImageView" android:src="@drawable/small_logo"
                   android:layout_width="wrap_content" android:layout_height="wrap_content">
        </ImageView>
        <TextView android:text="@string/msg_no_map_loaded"
                  android:textSize="22sp" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <TextView android:text="@string/msg_press_menu_maps"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>


    </LinearLayout>
</LinearLayout>